<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?scenebuilder-stylesheet /css/Style.css?>

<?import java.net.URL?>
<VBox fx:controller="Client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/css/Style.css"/></stylesheets>

    <TextArea fx:id="textArea" editable="false"  VBox.vgrow="ALWAYS"/>

    <HBox>
        <TextField fx:id="textField" promptText="Введите текст" HBox.hgrow="ALWAYS" onAction="#SendMsg"/>
        <Button fx:id="btn1" text="Send" onAction="#SendMsg" prefWidth="69.0"/>
    </HBox>
</VBox>